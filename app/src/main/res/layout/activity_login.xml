<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/espacio_norma_1"
    tools:context="and.clasificados.com.clasificados.actividades.Login">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:paddingLeft="@dimen/espacio_norma_1"
    android:paddingRight="@dimen/espacio_norma_1">
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="150dp"
                    android:layout_height="125dp"
                    android:src="@drawable/header_login"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                    <and.clasificados.com.views.EditTextLight
                        android:id="@+id/user"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/us_o_e"
                        android:background="@drawable/rounded_etext"
                        android:layout_below="@+id/button_fb"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        android:padding="4dp"
                        android:singleLine="true"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/button_fb"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:padding="3dp"
        android:text="@string/login_fb"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/login_divider"
        android:layout_alignBottom="@+id/user"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <and.clasificados.com.views.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/o_cuenta"
        android:id="@+id/textView6"
        android:textColor="#cccccc"
        android:layout_alignTop="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        />

    <and.clasificados.com.views.EditTextLight
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/pass"
        android:layout_below="@+id/user"
        android:layout_alignLeft="@+id/user"
        android:layout_alignStart="@+id/user"
        android:hint="@string/password"
        android:layout_marginTop="18dp"
        android:layout_alignRight="@+id/user"
        android:layout_alignEnd="@+id/user"
        android:background="@drawable/rounded_etext"
        android:inputType="textPassword"
        android:singleLine="true"
        android:padding="4dp"/>

    <and.clasificados.com.views.ButtonLight
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:id="@+id/button_session"
        android:text="@string/ingresar"
        android:background="@drawable/rounded_button_orange"
        android:textColor="#FFFFFF"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/pass"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <and.clasificados.com.views.TextViewLight
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/olvidar"
        android:id="@+id/olvide"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_alignTop="@+id/button_session"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView9"
        android:layout_below="@+id/olvide"
        android:layout_alignLeft="@+id/olvide"
        android:layout_alignStart="@+id/olvide"
        android:src="@drawable/login_forgot"
        android:layout_alignRight="@+id/olvide"
        android:layout_alignEnd="@+id/olvide" />

    <and.clasificados.com.views.ButtonLight
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/no_cuenta"
        android:id="@+id/button_registro"
        android:background="@drawable/rounded_etext"
        android:layout_below="@+id/button_session"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

</RelativeLayout>
</ScrollView>
    </LinearLayout>