<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/cont_footer"
        android:background="#c2c2c2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:id="@+id/cont_footer"
        android:layout_alignParentBottom="true"
        android:layout_height="45dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:weightSum="2"
            android:layout_alignParentStart="true">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">


                <com.blunderer.materialdesignlibrary.views.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/mi_cuenta"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView2"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="30dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/footer_left"
                    android:id="@+id/footer_left"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView2"
                    android:layout_toStartOf="@+id/textView2" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent">




                <com.blunderer.materialdesignlibrary.views.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text=" "
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/textView20"
                    android:textColor="#000000" />



                <com.blunderer.materialdesignlibrary.views.TextViewLight
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/nav_mensajes"
                    android:gravity="center"
                    android:id="@+id/textView202"
                    android:textColor="#000000"
                    android:layout_alignTop="@+id/textView20"
                    android:layout_toRightOf="@+id/textView20"
                    android:layout_toEndOf="@+id/textView20" />


                <ImageView
                    android:layout_width="25dp"
                    android:adjustViewBounds="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/footer_right"
                    android:id="@+id/footer_right"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView20"
                    android:layout_toStartOf="@+id/textView20" />


            </RelativeLayout>



        </LinearLayout>






    </RelativeLayout>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView6"
        android:layout_marginBottom="-40dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cont_footer"
        android:src="@drawable/footer_center" />


</RelativeLayout>