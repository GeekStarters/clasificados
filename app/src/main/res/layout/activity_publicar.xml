<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="and.clasificados.com.actividades.Publicar">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <and.clasificados.com.views.EditTextLight
                android:id="@+id/titulo"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:hint="@string/titulo"
                android:background="@drawable/rounded_etext"
                android:layout_marginTop="24dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <and.clasificados.com.views.EditTextLight
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:id="@+id/editText"
                android:layout_below="@+id/titulo"
                android:hint="@string/costo"
                android:layout_marginTop="18dp"
                android:layout_alignRight="@+id/titulo"
                android:layout_alignEnd="@+id/titulo"
                android:background="@drawable/rounded_etext"/>

            <GridLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_marginTop="19dp"
                android:columnCount="3"
                android:rowCount="1"
                android:id="@+id/gridLayout"
                android:layout_below="@+id/editText"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2">

                <Spinner
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/rounded_etext"/>
                <Spinner
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:background="@drawable/rounded_etext"/>
            </GridLayout>

            <and.clasificados.com.views.EditTextLight
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:id="@+id/editText2"
                android:layout_below="@+id/gridLayout"
                android:layout_alignLeft="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_marginTop="21dp"
                android:hint="@string/descripcion"
                android:textAlignment="gravity"
                android:background="@drawable/rounded_etext"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/editText2"
                android:layout_alignLeft="@+id/editText2"
                android:layout_alignStart="@+id/editText2"
                android:columnCount="4"
                android:rowCount="1"
                android:layout_marginTop="28dp"
                android:id="@+id/gridLayout2">
                <and.clasificados.com.views.TextViewLight
                    android:id="@+id/texto_descripcion"
                    android:layout_width="170dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/fotografias"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/camera"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:src="@drawable/add_camera"
                    android:background="@drawable/border"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/gallery"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/add_photo"
                    android:background="@drawable/border"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:id="@+id/delete"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:src="@drawable/delete_photo"
                    android:background="@drawable/border"/>
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="6"
                android:rowCount="2"
                android:layout_below="@+id/gridLayout2"
                android:layout_alignLeft="@+id/gridLayout2"
                android:layout_alignStart="@+id/gridLayout2"
                android:layout_marginTop="25dp"
                android:layout_alignRight="@+id/editText2"
                android:layout_alignEnd="@+id/editText2">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/anuncio1"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@drawable/iphone1"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/anuncio4"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:src="@drawable/iphone4"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/anuncio2"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:src="@drawable/iphone2"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/anuncio3"
                    android:layout_row="0"
                    android:layout_column="4"
                    android:src="@drawable/iphone3"
                    android:background="@drawable/border"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/anuncio5"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:src="@drawable/iphone5"
                    android:background="@drawable/border"/>
            </GridLayout>
        </RelativeLayout>

    </ScrollView>
</LinearLayout>
    <include layout="@layout/footer_publicar" />
    </RelativeLayout>