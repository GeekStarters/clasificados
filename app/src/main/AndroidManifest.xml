            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="and.clasificados.com.MainActivity" />
        </activity>
        <activity
            android:name=".Actividades.Login"
            android:label="@string/title_activity_login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="and.clasificados.com.MainActivity" />
        </activity>
        <activity
            android:name=".Actividades.Registro"
            android:label="@string/title_activity_registro_usuario">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="and.clasificados.com.MainActivity" />
        </activity>
    </application>

</manifest>
