<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">
    <and.clasificados.com.views.TextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q."
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dp"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <and.clasificados.com.views.TextViewLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/enviar_oferta"
            android:id="@+id/textView"
            android:textAlignment="center"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"/>

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:background="@drawable/apptheme_textfield_activated_holo_light"/>
        <and.clasificados.com.views.ButtonLight
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ofertar"
            android:layout_gravity="center"
            android:id="@+id/button_dialog"
            android:paddingLeft="25dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:drawablePadding="25dp"
            android:drawableRight="@drawable/send_icon2"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button_orange" />
    </LinearLayout>
</RelativeLayout>