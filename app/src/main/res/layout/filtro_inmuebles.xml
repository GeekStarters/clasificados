<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filtro_inmuebles"
    android:layout_alignParentTop="true"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/espacio_norma_1"
    android:paddingRight="@dimen/espacio_norma_1"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:paddingBottom="@dimen/espacio_norma_1">
    <Button
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:background="@drawable/triangle"
        android:id="@+id/selector_tab"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/gridLayout5"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#fff"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/selector_tab"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:id="@+id/tabs_todas"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-2dp"
            android:layout_toLeftOf="@+id/tabs_categoria"
            android:background="@drawable/radius_left_tabs_selected_2">

            <and.clasificados.com.views.TextViewLight
                android:id="@+id/tx_tabs_todas"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1.5dp"
                android:background="#008AC4"
                android:gravity="center"
                android:text="@string/cat4"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#fff"
                android:textSize="10sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/tabs_categoria"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-50dp"
            android:layout_toLeftOf="@+id/tx_medium"
            android:background="@drawable/radius_tabs">

            <and.clasificados.com.views.TextViewLight
                android:id="@+id/tx_tabs_categoria"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1.5dp"
                android:gravity="center"
                android:text="@string/cat5"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#008AC4"
                android:textSize="10sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/tx_medium"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RelativeLayout
            android:id="@+id/tabs_ciudad"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tx_medium"
            android:layout_toRightOf="@+id/tx_medium"
            android:background="@drawable/radius_tabs_right">

            <and.clasificados.com.views.TextViewLight
                android:id="@+id/tx_tabs_ciudad"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="1.5dp"
                android:background="#fff"
                android:gravity="center"
                android:text="@string/cat6"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#008AC4"
                android:textSize="10sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner3"
        android:layout_below="@+id/gridLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="4dp"
        android:background="@drawable/rounded_spinner"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="4dp"
        android:id="@+id/spinner4"
        android:layout_below="@+id/spinner3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_spinner"/>



    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner5"
        android:padding="4dp"
        android:layout_below="@+id/spinner4"
        android:layout_alignRight="@+id/spinner4"
        android:layout_alignEnd="@+id/spinner4"
        android:background="@drawable/rounded_spinner"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner6"
        android:padding="4dp"
        android:layout_below="@+id/spinner5"
        android:layout_alignRight="@+id/spinner5"
        android:layout_alignEnd="@+id/spinner5"
        android:background="@drawable/rounded_spinner"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinner6"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/imageView"
            android:padding="3dp"
            android:background="@drawable/rounded_etext"
            android:src="@drawable/recharge"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_weight="10"/>

        <and.clasificados.com.views.ButtonLight
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/filtro"
            android:id="@+id/f_i"
            android:padding="3dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_button_pressed"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>