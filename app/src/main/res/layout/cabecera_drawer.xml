<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@color/primaryColor"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/padding_izquierdo_cabecera"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/ancho_logo"
        android:layout_height="wrap_content"
        android:src="@drawable/pic_profile"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="174dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="26dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/texto_total_carrito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_gravity="center_vertical"
        android:text="Martin Montenegro"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:visibility="invisible"/>
    <Button
        android:layout_width="@dimen/ancho_logo"
        android:layout_height="wrap_content"
        android:text="@string/nologin"
        android:id="@+id/buttonDraw"
        android:onClick="iniciarSesion"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>