<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:paddingBottom="@dimen/espacio_norma_1"
    tools:context="and.clasificados.com.clasificados.actividades.Registro">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/espacio_norma_1"
        android:paddingRight="@dimen/espacio_norma_1">

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/nombre"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/nombre"
            android:background="@drawable/rounded_etext"
            android:layout_below="@+id/button_fb2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="4dp"/>

        <ImageView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_fb2"
            android:src="@drawable/fb_login"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/login_divider"
            android:layout_marginBottom="35dp"
            android:layout_alignBottom="@+id/nombre"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <and.clasificados.com.views.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/o_datos"
            android:id="@+id/textView6"
            android:textColor="#cccccc"
            android:layout_alignTop="@+id/imageView5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <and.clasificados.com.views.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_fb"
            android:id="@+id/textView7"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="18dp"
            android:layout_above="@+id/imageView5"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6" />

        <and.clasificados.com.views.EditTextLight
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:id="@+id/apellido"
            android:hint="@string/apellido"
            android:background="@drawable/rounded_etext"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/nombre"
            android:layout_alignLeft="@+id/nombre"
            android:layout_alignStart="@+id/nombre"
            android:padding="4dp"/>

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/email"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/email"
            android:background="@drawable/rounded_etext"
            android:layout_below="@+id/apellido"
            android:layout_alignLeft="@+id/apellido"
            android:layout_alignStart="@+id/apellido"
            android:layout_marginTop="20dp"
            android:padding="4dp"/>

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/user_name"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/nombre_user"
            android:background="@drawable/rounded_etext"
            android:layout_below="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_marginTop="21dp"
            android:padding="4dp"/>

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/contra"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/password"
            android:background="@drawable/rounded_etext"
            android:layout_below="@+id/user_name"
            android:layout_alignLeft="@+id/user_name"
            android:layout_alignStart="@+id/user_name"
            android:layout_marginTop="20dp"
            android:inputType="textPassword"
            android:padding="4dp"/>

        <and.clasificados.com.views.EditTextLight
            android:id="@+id/password2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:hint="@string/contra2"
            android:background="@drawable/rounded_etext"
            android:layout_below="@+id/contra"
            android:layout_alignLeft="@+id/contra"
            android:layout_alignStart="@+id/contra"
            android:layout_marginTop="24dp"
            android:inputType="textPassword"
            android:padding="4dp"/>

        <and.clasificados.com.views.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terminos_cond"
            android:id="@+id/terminos"
            android:textColor="#cccccc"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/password2"
            android:layout_centerHorizontal="true" />

        <and.clasificados.com.views.ButtonLight
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/registro"
            android:text="@string/registrarme"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_orange"
            android:layout_below="@+id/terminos"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</ScrollView>
</LinearLayout>